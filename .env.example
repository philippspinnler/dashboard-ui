VITE_API_BASE_URL=https://api.dashboard.monphi.ch

# Mock Data Configuration
# Set to 'true' to use local mock data instead of real API calls
# This is useful for local development without backend dependency
VITE_USE_MOCK_DATA=false

# Widget Configuration
# Configure which widgets to display and their positions
# Available widgets: clock, calendar, sonos, presence, internet, netatmo, public-transportation, eo-guide, weather, cars
# Use comma-separated values for each section, leave empty to hide section

# Left column widgets
VITE_WIDGETS_LEFT=clock,calendar

# Right column widgets
VITE_WIDGETS_RIGHT=sonos,presence,internet,netatmo,public-transportation,eo-guide

# Bottom row widgets
VITE_WIDGETS_BOTTOM=weather
